<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.date %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', blog_path(post) %></td>
    <% if logged_in? %>
      <td><%= link_to 'Edit', edit_blog_path(post) %></td>
      <td><%= link_to 'Destroy', blog_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if logged_in? %>
  <%= link_to 'New Post', new_blog_path %>
<% end %>
